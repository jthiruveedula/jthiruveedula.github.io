---
import Layout from '../layouts/Layout.astro';

const title = "Jagadeesh Thiruveedula - Full Stack Developer";
const description = "Professional portfolio of Jagadeesh Thiruveedula, showcasing expertise in modern web development, cloud technologies, and software engineering.";
---

<Layout title={title} description={description} className="">
  <main class="min-h-screen">
    <!-- Hero Section -->
    <section class="bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-600 text-white py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="animate-fade-in">
          <h1 class="text-5xl md:text-7xl font-bold mb-6">
            Jagadeesh Thiruveedula
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-blue-100">
            Full Stack Developer & Cloud Enthusiast
          </p>
          <p class="text-lg mb-10 max-w-3xl mx-auto text-blue-50">
            Passionate about creating innovative web solutions with modern technologies.
            Expertise in React, Node.js, Cloud Technologies, and DevOps practices.
          </p>
          <div class="space-x-4">
            <a href="/projects" class="inline-block bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors duration-300">
              View My Work
            </a>
            <a href="/contact" class="inline-block border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition-colors duration-300">
              Get In Touch
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- About Preview Section -->
    <section class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
          <div class="animate-slide-up">
            <h2 class="text-4xl font-bold text-gray-900 mb-6">About Me</h2>
            <p class="text-lg text-gray-600 mb-6">
              I'm a passionate full-stack developer with expertise in modern web technologies.
              I love building scalable applications and exploring new technologies to solve complex problems.
            </p>
            <div class="grid grid-cols-2 gap-6">
              <div class="text-center p-6 bg-blue-50 rounded-lg">
                <div class="text-3xl font-bold text-blue-600">5+</div>
                <div class="text-sm text-gray-600">Years Experience</div>
              </div>
              <div class="text-center p-6 bg-purple-50 rounded-lg">
                <div class="text-3xl font-bold text-purple-600">50+</div>
                <div class="text-sm text-gray-600">Projects Completed</div>
              </div>
            </div>
          </div>
          <div class="animate-fade-in">
            <div class="bg-gradient-to-br from-blue-100 to-purple-100 p-8 rounded-2xl">
              <h3 class="text-xl font-semibold mb-4 text-gray-900">Core Technologies</h3>
              <div class="grid grid-cols-2 gap-4">
                <div class="flex items-center space-x-2">
                  <span class="w-3 h-3 bg-blue-500 rounded-full"></span>
                  <span class="text-gray-700">React & Next.js</span>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="w-3 h-3 bg-green-500 rounded-full"></span>
                  <span class="text-gray-700">Node.js & Express</span>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="w-3 h-3 bg-yellow-500 rounded-full"></span>
                  <span class="text-gray-700">TypeScript</span>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="w-3 h-3 bg-purple-500 rounded-full"></span>
                  <span class="text-gray-700">Cloud Platforms</span>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="w-3 h-3 bg-red-500 rounded-full"></span>
                  <span class="text-gray-700">Database Systems</span>
                </div>
                <div class="flex items-center space-x-2">
                  <span class="w-3 h-3 bg-indigo-500 rounded-full"></span>
                  <span class="text-gray-700">DevOps & CI/CD</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 bg-gray-900 text-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-4xl font-bold mb-6">Ready to Work Together?</h2>
        <p class="text-xl text-gray-300 mb-8">
          Let's discuss your project and bring your ideas to life with cutting-edge technology.
        </p>
        <a href="/contact" class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors duration-300">
          Start a Conversation
        </a>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Custom animations and effects */
  :global(html) {
    scroll-behavior: smooth;
  }
  
  :global(body) {
    overflow-x: hidden;
  }
  
  main {
    animation: fadeIn 0.8s ease-in-out;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
