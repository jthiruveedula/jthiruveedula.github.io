---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Jagadeesh Thiruveedula â€” Data Architect, GenAI & GCP Leader">
  <!-- Animated Hero Background Shape -->
  <div style="position: absolute; top: 0; left: 0; width: 100vw; z-index: 0;">
    <svg aria-hidden="true" class="w-full" fill="none" viewBox="0 0 1440 380" xmlns="http://www.w3.org/2000/svg">
      <path d="M0,96L80,128C160,160,320,224,480,229.3C640,235,800,181,960,154.7C1120,128,1280,128,1360,128L1440,128L1440,0L1360,0C1280,0,1120,0,960,0C800,0,640,0,480,0C320,0,160,0,80,0L0,0Z" fill="#dbeafe" fill-opacity="1"></path>
    </svg>
  </div>

  <main class="relative z-10 py-28 px-4 flex flex-col items-center min-h-[80vh]">
    <!-- Profile Avatar Section -->
    <section class="mb-8" aria-labelledby="profile-heading">
      <h2 id="profile-heading" class="sr-only">Profile</h2>
      <div class="flex justify-center">
        <img 
          src="/placeholder-avatar.jpg" 
          class="rounded-full h-32 w-32 md:h-44 md:w-44 border-4 border-blue-300 shadow-lg animate-hero-avatar" 
          alt="Jagadeesh Thiruveedula - Senior Data Architect and GenAI Leader portrait" 
        />
      </div>
    </section>

    <!-- Visual Divider -->
    <hr class="w-full max-w-4xl border-t-2 border-blue-200 mb-8" aria-hidden="true" />

    <!-- Main Hero Card Section -->
    <section 
      class="card max-w-3xl w-full flex flex-col items-center gap-6 p-10 shadow-2xl bg-white/90 backdrop-blur-md animate-hero-card"
      id="hero-card"
      aria-labelledby="hero-heading"
    >
      <div class="text-center">
        <h1 id="hero-heading" class="section-title mb-1 animate-hero-title">Jagadeesh Thiruveedula</h1>
        <h2 class="text-lg md:text-2xl font-bold text-blue-700 mb-2 animate-hero-subtitle">Senior Data Architect | GenAI, Google Cloud, Vector DBs</h2>
        <div class="mb-4 text-blue-900 dark:text-blue-100 leading-relaxed text-base md:text-lg animate-hero-description">
          Empowering enterprise transformation with modern data platforms, generative AI, and cloud-native strategy. 10+ years' impact at scale:
        </div>
        <div class="flex gap-4 mb-3 justify-center animate-hero-buttons">
          <a class="bg-blue-700 hover:bg-blue-800 text-white font-semibold px-5 py-2 rounded-md shadow transition hover:scale-105 transform" href="/about">About Me</a>
          <a class="bg-blue-100 hover:bg-blue-200 dark:bg-blue-900 dark:hover:bg-blue-800 text-blue-900 dark:text-white font-semibold px-5 py-2 rounded-md shadow transition hover:scale-105 transform" href="/experience">Experience</a>
        </div>
      </div>
    </section>

    <!-- Visual Divider -->
    <hr class="w-full max-w-4xl border-t-2 border-blue-200 my-12" aria-hidden="true" />

    <!-- Metrics Section -->
    <section class="w-full max-w-4xl" aria-labelledby="metrics-heading">
      <h2 id="metrics-heading" class="text-2xl font-bold text-center text-blue-800 mb-8">Key Achievements</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 animate-stats-grid">
        <div class="metric-card card flex flex-col items-center py-7 px-4 border-t-4 border-blue-400 bg-gradient-to-b from-sky-100 to-white hover:shadow-lg hover:scale-105 transform transition-all duration-300 animate-stat-card-1" role="region" aria-labelledby="metric-1">
          <span class="text-3xl font-bold text-blue-600 mb-1" id="metric-1">25%+</span>
          <span class="text-xs uppercase tracking-wide font-semibold text-blue-900 text-center">Infra Cost Optimization</span>
        </div>
        <div class="metric-card card flex flex-col items-center py-7 px-4 border-t-4 border-indigo-400 bg-gradient-to-b from-indigo-50 to-white hover:shadow-lg hover:scale-105 transform transition-all duration-300 animate-stat-card-2" role="region" aria-labelledby="metric-2">
          <span class="text-3xl font-bold text-indigo-700 mb-1" id="metric-2">100TB+</span>
          <span class="text-xs uppercase tracking-wide font-semibold text-indigo-900 text-center">Data Processed Daily</span>
        </div>
        <div class="metric-card card flex flex-col items-center py-7 px-4 border-t-4 border-green-500 bg-gradient-to-b from-green-50 to-white hover:shadow-lg hover:scale-105 transform transition-all duration-300 animate-stat-card-3" role="region" aria-labelledby="metric-3">
          <span class="text-3xl font-bold text-green-700 mb-1" id="metric-3">99.8%</span>
          <span class="text-xs uppercase tracking-wide font-semibold text-green-900 text-center">Uptime Delivered</span>
        </div>
        <div class="metric-card card flex flex-col items-center py-7 px-4 border-t-4 border-pink-400 bg-gradient-to-b from-pink-50 to-white hover:shadow-lg hover:scale-105 transform transition-all duration-300 animate-stat-card-4" role="region" aria-labelledby="metric-4">
          <span class="text-3xl font-bold text-pink-700 mb-1" id="metric-4">15+</span>
          <span class="text-xs uppercase tracking-wide font-semibold text-pink-900 text-center">Enterprise Projects</span>
        </div>
      </div>
    </section>

    <!-- Visual Divider -->
    <hr class="w-full max-w-4xl border-t-2 border-blue-200 my-12" aria-hidden="true" />

    <!-- Tech Pillars Section -->
    <section class="max-w-4xl w-full" aria-labelledby="tech-heading">
      <h2 id="tech-heading" class="text-2xl font-bold text-center text-blue-800 mb-8">Technical Expertise</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 animate-tech-pillars">
        <div class="card flex flex-col gap-2 p-6 hover:shadow-lg transform transition-all duration-300 hover:scale-105 animate-tech-card-1" role="region" aria-labelledby="tech-1">
          <h3 id="tech-1" class="font-semibold text-blue-700 text-sm mb-1">Google Cloud & Data Engineering</h3>
          <ul class="text-slate-800 text-xs pl-4 list-disc leading-relaxed">
            <li>BigQuery, Dataflow, Dataproc, Composer</li>
            <li>Vertex AI, Cloud Functions, Pub/Sub</li>
            <li>Data Pipeline Architecture & Optimization</li>
          </ul>
        </div>
        <div class="card flex flex-col gap-2 p-6 hover:shadow-lg transform transition-all duration-300 hover:scale-105 animate-tech-card-2" role="region" aria-labelledby="tech-2">
          <h3 id="tech-2" class="font-semibold text-purple-700 text-sm mb-1">Generative AI & Machine Learning</h3>
          <ul class="text-slate-800 text-xs pl-4 list-disc leading-relaxed">
            <li>LLMs, RAG, Vector Databases</li>
            <li>MLOps, Model Deployment & Monitoring</li>
            <li>AI Strategy & Implementation</li>
          </ul>
        </div>
        <div class="card flex flex-col gap-2 p-6 hover:shadow-lg transform transition-all duration-300 hover:scale-105 animate-tech-card-3" role="region" aria-labelledby="tech-3">
          <h3 id="tech-3" class="font-semibold text-green-700 text-sm mb-1">Architecture & Leadership</h3>
          <ul class="text-slate-800 text-xs pl-4 list-disc leading-relaxed">
            <li>Enterprise Data Architecture</li>
            <li>Team Leadership & Mentoring</li>
            <li>Cloud Migration & Modernization</li>
          </ul>
        </div>
      </div>
    </section>
  </main>
</Layout>
