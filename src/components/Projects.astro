---
// Projects component - displays GitHub repositories dynamically
export interface Props {
  repositories?: any[];
}

const { repositories = [] } = Astro.props;

// Static projects data as fallback
const staticProjects = [
  {
    name: 'Portfolio Website',
    description: 'A modern, responsive portfolio website built with Astro and Tailwind CSS.',
    html_url: 'https://github.com/jthiruveedula/jthiruveedula.github.io',
    topics: ['astro', 'tailwindcss', 'portfolio', 'typescript'],
    stargazers_count: 0,
    language: 'Astro'
  },
  {
    name: 'AI Chat Application',
    description: 'Full-stack chat application with AI integration and real-time messaging.',
    html_url: '#',
    topics: ['react', 'nodejs', 'ai', 'websockets'],
    stargazers_count: 5,
    language: 'TypeScript'
  },
  {
    name: 'E-commerce Platform',
    description: 'Modern e-commerce platform with payment integration and admin dashboard.',
    html_url: '#',
    topics: ['react', 'nodejs', 'mongodb', 'stripe'],
    stargazers_count: 12,
    language: 'JavaScript'
  }
];

const projects = repositories.length > 0 ? repositories.slice(0, 6) : staticProjects;
---

<section id="projects" class="py-20 bg-gray-50 dark:bg-gray-800">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">
        Featured Projects
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
        A showcase of my recent work and open-source contributions
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project, index) => (
        <div class="bg-white dark:bg-gray-900 rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 project-card">
          <!-- Project Header -->
          <div class="p-6">
            <div class="flex items-start justify-between mb-4">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                <a 
                  href={project.html_url} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
                >
                  {project.name}
                </a>
              </h3>
              {project.stargazers_count !== undefined && (
                <div class="flex items-center text-gray-500 dark:text-gray-400">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                  <span class="text-sm">{project.stargazers_count}</span>
                </div>
              )}
            </div>
            
            <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-3">
              {project.description || 'No description available'}
            </p>
            
            <!-- Tech Stack -->
            {project.topics && project.topics.length > 0 && (
              <div class="flex flex-wrap gap-2 mb-4">
                {project.topics.slice(0, 4).map((topic: string) => (
                  <span class="px-2 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200 text-xs rounded-full">
                    {topic}
                  </span>
                ))}
              </div>
            )}
            
            <!-- Language and Links -->
            <div class="flex items-center justify-between">
              {project.language && (
                <div class="flex items-center text-sm text-gray-500 dark:text-gray-400">
                  <div class="w-3 h-3 rounded-full bg-blue-500 mr-2"></div>
                  <span>{project.language}</span>
                </div>
              )}
              
              <div class="flex space-x-2">
                <a 
                  href={project.html_url} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300 transition-colors"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- View More Projects Button -->
    <div class="text-center mt-12">
      <a 
        href="https://github.com/jthiruveedula?tab=repositories" 
        target="_blank" 
        rel="noopener noreferrer"
        class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg transition-colors duration-200"
      >
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd"></path>
        </svg>
        View More on GitHub
      </a>
    </div>
  </div>
</section>

<style>
  .project-card {
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 0.6s ease-out forwards;
  }

  .project-card:nth-child(1) { animation-delay: 0.1s; }
  .project-card:nth-child(2) { animation-delay: 0.2s; }
  .project-card:nth-child(3) { animation-delay: 0.3s; }
  .project-card:nth-child(4) { animation-delay: 0.4s; }
  .project-card:nth-child(5) { animation-delay: 0.5s; }
  .project-card:nth-child(6) { animation-delay: 0.6s; }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
