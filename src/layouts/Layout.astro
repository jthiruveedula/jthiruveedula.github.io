---
export interface Props {
  title?: string;
  description?: string;
  className?: string;
}

const { title = 'My Portfolio', description = 'Welcome to my personal portfolio', className = '' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(-20px); }
        to { opacity: 1; transform: translateY(0); }
      }
      @keyframes slideUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
      }
      .animate-fade-in {
        animation: fadeIn 0.6s ease-out;
      }
      .animate-slide-up {
        animation: slideUp 0.8s ease-out;
      }
    </style>
  </head>
  <body class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 text-gray-900 font-sans">
    <div class="flex flex-col min-h-screen">
      <!-- Animated Header -->
      <header class="bg-white shadow-lg animate-fade-in">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between items-center py-6">
            <div class="flex items-center">
              <h1 class="text-2xl font-bold text-gray-900 hover:text-blue-600 transition-colors duration-300">
                <a href="/">Portfolio</a>
              </h1>
            </div>
            <div class="hidden md:block">
              <div class="ml-10 flex items-baseline space-x-4">
                <a href="/" class="text-gray-900 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-all duration-300 hover:bg-blue-50">
                  Home
                </a>
                <a href="/about" class="text-gray-500 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-all duration-300 hover:bg-blue-50">
                  About
                </a>
                <a href="/projects" class="text-gray-500 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-all duration-300 hover:bg-blue-50">
                  Projects
                </a>
                <a href="/contact" class="text-gray-500 hover:text-blue-600 px-3 py-2 rounded-md text-sm font-medium transition-all duration-300 hover:bg-blue-50">
                  Contact
                </a>
              </div>
            </div>
          </div>
        </nav>
      </header>

      <!-- Main Content Area -->
      <main class={`flex-grow ${className}`}>
        <slot />
      </main>

      <!-- Animated Footer -->
      <footer class="bg-gray-800 text-white animate-slide-up">
        <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
              <h3 class="text-sm font-semibold text-gray-300 tracking-wider uppercase">
                About
              </h3>
              <p class="mt-4 text-base text-gray-300">
                A passionate developer creating amazing web experiences.
              </p>
            </div>
            <div>
              <h3 class="text-sm font-semibold text-gray-300 tracking-wider uppercase">
                Quick Links
              </h3>
              <ul class="mt-4 space-y-2">
                <li>
                  <a href="/" class="text-base text-gray-300 hover:text-white transition-colors duration-300">
                    Home
                  </a>
                </li>
                <li>
                  <a href="/projects" class="text-base text-gray-300 hover:text-white transition-colors duration-300">
                    Projects
                  </a>
                </li>
                <li>
                  <a href="/contact" class="text-base text-gray-300 hover:text-white transition-colors duration-300">
                    Contact
                  </a>
                </li>
              </ul>
            </div>
            <div>
              <h3 class="text-sm font-semibold text-gray-300 tracking-wider uppercase">
                Connect
              </h3>
              <div class="mt-4 flex space-x-6">
                <a href="#" class="text-gray-300 hover:text-white transition-colors duration-300">
                  <span class="sr-only">GitHub</span>
                  <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
