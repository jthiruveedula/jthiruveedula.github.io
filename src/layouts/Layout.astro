---
const { title = "Jagadeesh Thiruveedula | Data Architect" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="theme-color" content="#2563eb" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;900&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet" />
    <style>
      html {
        font-family: 'Inter', system-ui, sans-serif;
        background: linear-gradient(120deg,#edf4fe 0%,#eaf0fa 60%,#dde4fa 100%);
        min-height: 100%;
      }
      body {
        margin:0;
        min-height:100vh;
        color:#222;
        background:none;
      }
      code, pre {
        font-family: 'JetBrains Mono', monospace;
      }
    </style>
    <link href="/global.css" rel="stylesheet">
    <slot name="head" />
  </head>
  <body class="min-h-screen w-full text-slate-900 dark:text-slate-100 dark:bg-gradient-to-tr dark:from-slate-800 dark:via-slate-900 dark:to-blue-950">
    <!-- Top Navbar -->
    <nav class="w-full px-8 py-4 fixed z-40 top-0 left-0 flex items-center backdrop-blur-lg shadow border-b dark:bg-slate-900/80 bg-white/75">
      <a href="/" class="text-2xl font-bold tracking-tight text-blue-500 mr-8">JT Data Architect</a>
      <div class="flex flex-1 gap-6 items-center ml-2">
        <a href="/" class="nav-link">Home</a>
        <a href="/about" class="nav-link">About</a>
        <a href="/experience" class="nav-link">Experience</a>
        <a href="/skills" class="nav-link">Skills</a>
        <a href="/contact" class="nav-link">Contact</a>
        <a href="https://www.linkedin.com/in/jagadeesh-thiruveedula/" target="_blank" rel="noopener" class="nav-link">LinkedIn</a>
      </div>
    </nav>
    <!-- Main Content Wrapper -->
    <div class="w-full min-h-screen pt-24">
      <slot />
    </div>
    <footer class="w-full py-8 text-center text-xs text-slate-400 dark:text-slate-600 mt-20">
      &copy; {new Date().getFullYear()} Jagadeesh Thiruveedula &mdash; Data Architect. Built with Astro. All rights reserved.
    </footer>

    <style global>
      /* Universal utility upgrades */
      .nav-link {
        font-weight: 600;
        color: #1d334a;
        opacity: 0.92;
        margin-right: .2em;
        border-radius: 0.5rem;
        padding: 0.4rem 1rem;
        transition: background .18s, color .18s, box-shadow .18s;
        text-decoration: none;
      }
      .nav-link:hover, .nav-link.active {
        background: #e5effa;
        color: #1872e1;
        box-shadow: 0 0 0 2px #d5e8ff;
      }
      @media (max-width: 700px) {
        nav { flex-direction: column; gap: 0.3rem; }
        .nav-link { padding: 0.35rem 0.7rem; font-size: 1rem; }
      }
      .card {
        border-radius: 1.2em;
        box-shadow: 0 2px 24px 0 #3a56860c, 0 0.5px 2px #0001;
        background: rgba(255,255,255,0.96);
        border: 1.5px solid #eef2f8;
        transition: box-shadow .18s, transform .18s;
      }
      .card:hover { box-shadow:0 4px 36px 0 #328bf51c, 0 1.5px 6px #1872e122; transform: translateY(-2px) scale(1.01);}
      .section-title { font-size:2.4rem; font-weight:900; margin-bottom:.45em; color:#1872e1;}
    </style>
  </body>
</html>
